{{ define "Header" }}

<style type="text/css">

.screen_box {
	position: relative;

	width: 640px;
	height: 500px;
}

#screen {
	position: absolute;

	top:  0;
	left: 0;

	background: #000;
}

#screen_overlay {
	position: absolute;

	top:  0;
	left: 0;

	width:      640px;
	height:     480px;
	min-height: 480px;

	background: #000;

	filter: alpha(opacity=70);
	opacity: 0.7;
	-moz-opacity: 0.7;
}

#screen_overlay .title {
	position:  absolute;

	top:  3px;
	left: 5px;
	right: 0;
	bottom: 600px;

	font-size: 35px;

	color: #FFFFFF;
}

.screen_overlay_log {
	position: absolute;

	top:  0;
	left: 0;

	width:  100%;
	height: 100%;

	padding: 5px;

	color: #fff;
}

.screen_overlay_playbtn {
	position: absolute;

	top:  50%;
	left: 50%;

	margin: -50px 0 0 -50px;
}

.screen_overlay_playbtn .btn-fab {
	width:  100px;
	height: 100px;

	font-size: 70px;
}

</style>

{{ end }}
{{ define "Content" }}

<div class="screen_box">
	<canvas id="screen" width=640 height=480></canvas>
	<div id="screen_overlay">
		<div id="errors" class="screen_overlay_log">
		</div>
		<div class="screen_overlay_playbtn">
			<a href="javascript:runProgram();" class="btn btn-primary btn-fab btn-raised mdi-av-play-circle-fill"></a>
		</div>
		<a href="/program/view/?p={{ .Program.ID }}" target="_top" class="title">{{ .Program.Title }}</a><br />
	</div>
</div>

<script type="text/javascript">

function setThumbnail() {
	$("#screen").css({
		"background-image": "url(/api/program/thumbnail/?p={{ .Program.ID }})",
		"background-size" : "640px 480px"
		});
}

function postProgramRun() {
	$("#screen_overlay").hide();
}

function runProgram() {
	$("#screen_overlay .screen_overlay_playbtn").fadeOut("slow");
	$("#screen_overlay .title").fadeOut("slow");

	runWithFS($("#screen_overlay .screen_overlay_log"));
}

$(document).ready(function () {
	setThumbnail();
});

var pid = {{ .Program.ID }};
var steps = "{{ .Program.Steps }}";
var resolution = {
	w: "{{ .Program.ResolutionW }}",
	h: "{{ .Program.ResolutionH }}"
};

{{ plugin "loadProgram" .Program.Runtime .Program.RuntimeVersion }}

</script>

{{ end }}
